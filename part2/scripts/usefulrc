#NOTE: useful commands for development
alias k_reset="sudo /vagrant/scripts/reset_cluster.sh"
alias ed="sudo vim /etc/nixos/vagrant-provision.nix"
alias reb="sudo nixos-rebuild switch"
alias res="ed && reb && k_reset && ed && reb"
alias delete_webhook="sudo k3s kubectl delete -A ValidatingWebhookConfiguration ingress-nginx-admission"
alias kg="sudo k3s kubectl get"
alias k="sudo k3s kubectl"
alias kgpi="sudo k3s kubectl get pods --all-namespaces -l app.kubernetes.io/name=ingress-nginx"
alias ki="sudo k3s kubectl get ingress -o wide -n ingress-nginx"
alias kgs="sudo k3s kubectl get services -o wide"
alias kgp="sudo k3s kubectl get pods"
alias kgpo="sudo k3s kubectl get pods -o wide"
alias kgn="sudo k3s kubectl get nodes -o wide"
alias kgd="sudo k3s kubectl get deployments -o wide"
alias kga="sudo k3s kubectl get all"
alias kgak="sudo k3s kubectl get all -n kube-system"
alias kgai="sudo k3s kubectl get all -n ingress-nginx"
alias kd="sudo k3s kubectl delete"
alias ka="sudo k3s kubectl apply -f"
alias kgsa="sudo k3s kubectl get svc --all-namespaces"
alias kdesc="sudo k3s kubectl describe"
alias kgan="sudo k3s kubectl get namespaces"
